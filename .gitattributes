# Auto-detect text files and perform LF normalization
* text=auto
# Python files always use LF
*.py text eol=lf
*.pyw text eol=lf
# Shell scripts always use LF
*.sh text eol=lf
# Batch files always use CRLF (Windows)
*.bat text eol=crlf
*.cmd text eol=crlf
# Config files use LF
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf
# SQL and migrations
*.sql text eol=lf
# Web assets
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf
# Binary files (no conversion)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.pdf binary
*.xlsx binary
*.xls binary
*.db binary
*.sqlite binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
# Excel files are binary
*.xlsx binary
*.xls binary
# SQLite databases are binary
*.db binary
*.sqlite binary
*.sqlite3 binary
# Diff settings for specific file types
*.py diff=python
*.md diff=markdown
Typical*/**/*.xlsx filter=lfs diff=lfs merge=lfs -text
